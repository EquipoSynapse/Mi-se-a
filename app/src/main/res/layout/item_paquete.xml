<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/nombre_paquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del paquete"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/autor_paquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/peso_paquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso" />

    <TextView
        android:id="@+id/valor_paquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor" />

    <TextView
        android:id="@+id/cantidad_senias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad de señas" />

    <TextView
        android:id="@+id/descripcion_paquete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción breve" />

</LinearLayout>
