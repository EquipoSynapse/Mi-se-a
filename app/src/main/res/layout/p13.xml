<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/Fondo1"
    tools:context=".P.P13">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ID1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/r3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ID2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del paquete"
                android:textColor="@color/Color2"
                android:inputType="textCapWords|textAutoCorrect"
                android:padding="10dp"
                android:textColorHint="@color/Color3"
                android:importantForAutofill="no"
                android:background="@drawable/fondo2"
                android:backgroundTint="@color/Fondo2"
                android:layout_gravity="left"
                android:gravity="left"
                android:textIsSelectable="true"
                android:textSize="15dp"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <EditText
                android:id="@+id/ID3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autor del paquete"
                android:textColor="@color/Color2"
                android:inputType="textCapWords|textAutoCorrect"
                android:padding="10dp"
                android:textColorHint="@color/Color3"
                android:importantForAutofill="no"
                android:background="@drawable/fondo2"
                android:backgroundTint="@color/Fondo2"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textIsSelectable="true"
                android:textSize="15dp"
                android:textStyle="bold"
                android:drawablePadding="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

        </LinearLayout>




    </LinearLayout>

    <ImageView
        android:id="@+id/ID4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/r31"
        android:padding="20dp"
        android:background="@drawable/fondo2"
        android:backgroundTint="@color/Fondo2"
        app:tint="@color/Fondo3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ID5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Peso"
            android:textColor="@color/Color2"
            android:background="@drawable/fondo2"
            android:backgroundTint="@color/Fondo2"
            android:layout_gravity="left"
            android:gravity="left"
            android:textIsSelectable="true"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ID6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Cantidad de seÃ±as"
            android:textColor="@color/Color2"
            android:background="@drawable/fondo2"
            android:backgroundTint="@color/Fondo2"
            android:layout_gravity="left"
            android:gravity="left"
            android:textIsSelectable="true"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <EditText
        android:id="@+id/ID7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserte el precio en cordobas"
        android:textColor="@color/Color2"
        android:inputType="textCapWords|textAutoCorrect"
        android:padding="10dp"
        android:textColorHint="@color/Color3"
        android:importantForAutofill="no"
        android:background="@drawable/fondo2"
        android:backgroundTint="@color/Fondo2"
        android:layout_margin="10dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <TextView
        android:id="@+id/ID8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        android:text="Enviar"
        android:textColor="@color/Color2"
        android:background="@drawable/fondo2"
        android:backgroundTint="@color/Fondo2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:textStyle="bold"/>
</LinearLayout>