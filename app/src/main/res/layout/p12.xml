<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Fondo3"
    tools:context=".P.P12">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/fondo3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/Fondo1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ID1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/r5"
                app:tint="@color/Fondo3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Color0"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="@string/t11"/>

            <ImageView
                android:id="@+id/ID2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/r12"
                app:tint="@color/Fondo3"/>

            <ImageView
                android:id="@+id/ID3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="30dp"
                android:src="@drawable/r11"
                app:tint="@color/Fondo3"/>

            <ImageView
                android:id="@+id/ID4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/r13"
                app:tint="@color/Fondo3"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/fondo2"
                android:backgroundTint="@color/Fondo2"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/fondo2"
                    android:backgroundTint="@color/Fondo3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ID5"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:src="@drawable/vacio"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- SurfaceView para renderizar el contenido 3D -->
                    <org.rajawali3d.view.SurfaceView
                        android:id="@+id/ID15"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <ImageView
                        android:id="@+id/ID6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/r10"
                        app:tint="@color/Fondo1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <Switch
                        android:id="@+id/ID14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modo 2D/3D  "
                        android:thumbTint="@color/Fondo0"
                        android:trackTint="@color/Fondo2"
                        android:textColor="@color/Color0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Grabar voz"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/Color0"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ID6" />

                    <TextView
                        android:id="@+id/ID7"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="80dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=" "
                        android:textColor="@color/Color1"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ID8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/r14"
                        app:tint="@color/Fondo1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <ImageView
                        android:id="@+id/ID9"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/r18"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp"
                        app:tint="@color/Fondo1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <ImageView
                        android:id="@+id/ID10"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/r20"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="20dp"
                        app:tint="@color/Fondo1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/Color0"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:text="Velocidad"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/Color0"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:text="Grabar persona"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/Color0"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:text="Grabar traducción"/>



                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/vacio"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fondo4"
                    android:backgroundTint="@color/Fondo1"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ID11"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/r8"
                            android:layout_weight="1"
                            app:tint="@color/Fondo3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <ImageView
                            android:id="@+id/ID12"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/r17"
                            android:layout_weight="1"
                            app:tint="@color/Fondo3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <ImageView
                            android:id="@+id/ID13"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/r9"
                            android:layout_weight="1"
                            app:tint="@color/Fondo3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/Color1"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:text="Teclado Dactilogo"/>

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/Color1"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:text="Reproducir voz"/>

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/Color1"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:text="Teclado Convencional"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>