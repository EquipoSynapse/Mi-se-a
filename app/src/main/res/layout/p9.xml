<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondo3"
    android:orientation="vertical"
    tools:context=".P.P7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/fondo3"
        android:backgroundTint="@color/Fondo0">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Unete a nosotros\nPara una mejor experiencia"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/Color0"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="50dp"
            android:src="@drawable/logo"/>

    </LinearLayout>

    <!-- Correo -->
    <EditText
        android:id="@+id/ID1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/t15"
        android:textColor="@color/Color2"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/Color3"
        android:importantForAutofill="no"
        android:background="@drawable/fondo2"
        android:backgroundTint="@color/Fondo2"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <!-- Contraseña -->
    <EditText
        android:id="@+id/ID2"
        android:hint="@string/t16"
        android:inputType="textPassword"
        android:background="@drawable/fondo2"
        android:backgroundTint="@color/Fondo2"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/Color2"
        android:textColorHint="@color/Color3"
        android:importantForAutofill="no"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textIsSelectable="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <!-- Botón Registrar -->
    <TextView
        android:id="@+id/ID3"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:textStyle="bold"
        android:textColor="@color/Color0"
        android:padding="10dp"
        android:background="@drawable/fondo2"
        android:backgroundTint="@color/Fondo0"/>

</LinearLayout>